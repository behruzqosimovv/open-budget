from telegram import Update, KeyboardButton, ReplyKeyboardMarkup
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, filters, ContextTypes
import os

TOKEN = os.getenv("BOT_TOKEN") or "8022307088:AAF4pj3HRskIOnM34tpCe8huqxMIxgFr7dQ"  # Token
ADMIN_ID = 123456789  # Admin ID

# Foydalanuvchilar balansi
user_balances = {}

# /start komandasi
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    keyboard = [
        [KeyboardButton("📤 Ovoz berish")],
        [KeyboardButton("💰 Balans"), KeyboardButton("📥 Pulni yechib olish")]
    ]
    reply_markup = ReplyKeyboardMarkup(keyboard, resize_keyboard=True)
    await update.message.reply_text("Assalomu alaykum! Quyidagi tugmalardan foydalaning:", reply_markup=reply_markup)

# Ovoz berish funksiyasi
async def ovoz_berish(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user_id = update.message.from_user.id
    user_balances[user_id] = user_balances.get(user_id, 0) + 15000
    await update.message.reply_text("✅ Siz muvaffaqiyatli ovoz berdingiz! 15000 so'm qo‘shildi.")
    await update.message.reply_text(f"💰 Balansingiz: {user_balances[user_id]} so'm")

# Balans ko‘rsatish
async def balans(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user_id = update.message.from_user.id
    balance = user_balances.get(user_id, 0)
    await update.message.reply_text(f"💰 Sizning balansingiz: {balance} so'm")

# Pulni yechib olish
async def pul_yechish(update: Update, context: ContextTypes.DEFAULT_TYPE):
    user_id = update.message.from_user.id
    balance = user_balances.get(user_id, 0)
    if balance >= 15000:
        await update.message.reply_text("📥 So'rovingiz yuborildi. Admin siz bilan bog‘lanadi.")
        await context.bot.send_message(ADMIN_ID, f"📢 Pul yechish so‘rovi:\nUser ID: {user_id}\nBalans: {balance} so'm")
    else:
        await update.message.reply_text("❌ Sizning balansingiz yetarli emas (min 15000 so'm).")

# Asosiy funksiya
async def main():
    app = ApplicationBuilder().token(TOKEN).build()

    app.add_handler(CommandHandler("start", start))
    app.add_handler(MessageHandler(filters.Regex("Ovoz berish"), ovoz_berish))
    app.add_handler(MessageHandler(filters.Regex("Balans"), balans))
    app.add_handler(MessageHandler(filters.Regex("yechib olish"), pul_yechish))

    print("✅ Bot ishga tushdi...")
    await app.run_polling()

if __name__ == "__main__":
    import asyncio
    asyncio.run(main())
